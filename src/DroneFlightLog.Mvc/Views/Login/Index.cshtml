@model DroneFlightLog.Mvc.Models.LoginViewModel

@{
    ViewData["Title"] = "Log In";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-3">
                <span class = "text-danger">@Html.Raw(Model.Message)</span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-3">
                <strong>@Html.LabelFor(m => m.UserName)</strong>
                <div class="input-group">
                    @Html.EditorFor(m => m.UserName, new { @class = "form-control" })
                </div>
                <span>@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })</span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-3">
                <strong>@Html.LabelFor(m => m.Password)</strong>
                <div class="input-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <span>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-3">
                <div class="input-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </div>
    }
</div>
