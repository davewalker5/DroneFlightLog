@model DroneFlightLog.Mvc.Entities.Location

@Html.AntiForgeryToken()
@Html.HiddenFor(m => m.Id)

<div class="row">
    <div class="col-md">
        <strong>@Html.LabelFor(m => m.Name)</strong>
        <div class="input-group">
            @Html.EditorFor(m => m.Name, new { @class = "form-control" })
        </div>
        <span>@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</span>
    </div>
</div>
<br />

<div class="row">
    <div class="col-md">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>