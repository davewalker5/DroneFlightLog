@model DroneFlightLog.Mvc.Models.FlightPropertyViewModel

@{
    ViewData["Title"] = "Add Flight Property";
}

    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md">
                    <span style="font-size: 1.2rem"><strong>Add Flight Property</strong></span>
                </div>
            </div>
            <hr />

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="row">
                    <div class="col-md">
                        <span>@Html.Raw(Model.Message)</span>
                    </div>
                </div>
                <br />
            }

            <div class="row">
                <div class="col-md">
                    <strong>@Html.LabelFor(m => m.Name)</strong>
                    <div class="input-group">
                        @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <span>@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-md">
                    <strong>@Html.LabelFor(m => m.DataTypeValue)</strong>
                    <div class="input-group">
                        @Html.DropDownListFor(m => m.DataTypeValue, new List<SelectListItem>(Model.DataTypes), new { @class = "form-control" })
                    </div>
                    <span>@Html.ValidationMessageFor(m => m.DataTypeValue, "", new { @class = "text-danger" })</span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-md">
                    <strong>@Html.LabelFor(m => m.IsSingleInstance)</strong>
                    @Html.CheckBoxFor(m => m.IsSingleInstance, new { @class = "form-control" })
                    <span>@Html.ValidationMessageFor(m => m.IsSingleInstance, "", new { @class = "text-danger" })</span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-md">
                    <div class="input-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
